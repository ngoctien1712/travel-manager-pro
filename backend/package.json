{
  "name": "travel-manager-backend",
  "version": "1.0.0",
  "description": "VietTravel API - Travel Management Backend",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:migrate": "psql -f database/schema.sql",
    "db:migrate:geography": "psql -f database/migrations/001_geography_schema.sql",
    "db:seed-admin": "tsx scripts/seed-admin.ts",
    "crawl:countries": "tsx scripts/crawl-countries.ts",
    "crawl:cities": "tsx scripts/crawl-cities.ts",
    "crawl:areas": "tsx scripts/crawl-areas.ts",
    "crawl:poi": "tsx scripts/crawl-poi.ts",
    "crawl:vietnam": "tsx scripts/crawl-vietnam.ts",
    "crawl:all": "npm run crawl:countries && npm run crawl:cities && npm run crawl:areas && npm run crawl:poi"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-validator": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.10.0",
    "@types/pg": "^8.11.6",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
